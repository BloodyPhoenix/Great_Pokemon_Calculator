#:kivy 2.1.0


<GameAddition>:
    generation: generation
    game_name: game_name
    region: region
    dlc: dlc
    Widget:
        GridLayout:
            top: root.top
            rows: 4
            cols: 2
            col_default_width: 250
            Label:
                text: 'Поколение:'
            TextInput:
                id: generation
            Label:
                text: 'Название игры:'
            TextInput:
                id: game_name
            Label:
                text: 'Регион:'
            TextInput
                id: region
            Label:
                text: 'Основная игра (DLC):'
            TextInput:
                id: dlc
        Button:
            text: "Сохранить"
            center_y: 75
            center_x: root.width / 2
            font_size: 24
            size: 200, 75
            on_release: root.save_data()