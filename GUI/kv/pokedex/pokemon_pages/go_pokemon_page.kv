<FastMoveInfo>:
    damage_pve: ''
    damage_pvp: ''
    speed_pve: ''
    speed_pvp: ''
    energy_pve: ''
    energy_pvp: ''
    canvas.before:
        Color:
            rgba: 0.25, 0.25, 0.25, 1
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text: "Данные в PvE"
    GridLayout:
        size_hint_y: None
        cols: 2
        rows: 3
        Label:
            text: "Урон в секунду:"
        Label:
            text: root.damage_pve
        Label:
            text: "Энергия в секунду:"
        Label:
            text: root.energy_pve
    Label:
        text: "Данные в PvP"
    GridLayout:
        size_hint_y: None
        cols: 2
        rows: 3
        Label:
            text: "Урон в секунду:"
        Label:
            text: root.damage_pvp
        Label:
            text: "Энергия в секунду:"
        Label:
            text: root.energy_pvp


<ChargeMoveInfo>
    damage_pve: ''
    charges: ''
    damage_pvp: ''
    energy: ''
    speed: ''
    canvas.before:
        Color:
            rgba: 0.25, 0.25, 0.25, 1
        Rectangle:
            size: self.size
            pos: self.pos
    GridLayout:
        rows: 5
        cols: 2
        size_hint_y: None
        Label:
            text: "Урон в PvE:"
        Label:
            text: root.damage_pve
        Label:
            text: "Урон в PvP:"
        Label:
            text: root.damage_pvp
        Label:
            text: "Заряды:"
        Label:
            text: root.charges
        Label:
            text: "Энергия: "
        Label:
            text: root.energy
        Label:
            text: "Скорость:"
        Label:
            text: root.speed


<MovePreview>:
    on_release: root.full_info.open(self)


<MovesSection>:
    fast_moves_amount: 1
    charge_moves_amount: 1
    fast_moves_section: fast_moves_section
    charge_moves_section: charge_moves_section
    rows: 2
    cols: 2
    size_hint_y: None
    height: sum([c.height for c in self.children])
    Label:
        size: self.texture_size
        text: "Быстрые атаки"
    Label:
        size: self.texture_size
        text: "Заряжаемые атаки"
    GridLayout:
        id: fast_moves_section
        cols: 1
        rows: root.fast_moves_amount
        size_hint_y: None
        height: sum([c.height for c in self.children])
    GridLayout:
        id: charge_moves_section
        cols: 1
        rows: root.charge_moves_amount


<BaseData>:
    pokemon_image: ''
    pokemon_number: ''
    pokemon_species: ''
    pokemon_form: ''
    pokemon_type_1: ''
    pokemon_type_2: ''
    pokemon_rarity: ''
    rows: 1
    cols: 2
    size_hint_y: None
    Image:
        source: root.pokemon_image
    GridLayout:
        cols: 1
        rows: 6
        Label:
            size: self.texture_size
            text: root.pokemon_number
            halign: 'left'
        Label:
            size: self.texture_size
            text: root.pokemon_species
            halign: 'left'
        Label:
            size: self.texture_size
            text: root.pokemon_form
            halign: 'left'
        Label:
            size: self.texture_size
            text: root.pokemon_type_1
            halign: 'left'
        Label:
            size: self.texture_size
            text: root.pokemon_type_2
            halign: 'left'
        Label:
            size: self.texture_size
            text: root.pokemon_rarity
            halign: 'left'

<ResistsGrid>:
    size_hint_y: None
    rows: 2
    cols: 3
    resists: ''
    weaknesses: ''
    immunite: ''
    Label:
        size: self.texture_size
        text: "Сопротивления"
    Label:
        size: self.texture_size
        text: "Слабости"
    Label:
        size: self.texture_size
        text: "Иммунитеты"
    Label:
        size: self.texture_size
        text: root.resists
    Label:
        size: self.texture_size
        text: root.weaknesses
    Label:
        size: self.texture_size
        text: root.immunite

<StatsGrid>:
    rows: 2
    cols: 3
    size_hint_y: None
    height: sum([c.height for c in self.children])
    Label:
        size: self.texture_size
        text: "Базовые параметры"
    Label:
        size: self.texture_size
        text: "Максимальные параметры\n            уровень 40"
    Label:
        size: self.texture_size
        text: "Максимальные параметры\n            уровень 50"


