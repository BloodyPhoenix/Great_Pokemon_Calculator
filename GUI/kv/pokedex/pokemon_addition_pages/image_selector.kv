<ImageSelector>:
    size_hint: 0.8, 0.8
    title: "Выбор изображения"
    pictures_dir: '/'
    Widget:
        size_hint_y: None
        BoxLayout:
            center_x: root.center_x
            orientation: 'vertical'
            size_hint_y: None
            size_hint_x: None
            width: root.width
            padding: [0, 0, 0, 100]
            Image:
                size_hint_y: None
                height: root.height * 0.2
                width: 350
                id: selected_image
                source: ''
            FileChooserIconView:
                height: root.height * 0.4
                width: root.width
                size_hint_y: None
                id: image_chooser
                rootpath: root.pictures_dir
                filters: ['*.png']
                on_selection: root.image_selected(image_chooser.selection)
        Button:
            text: "Принять"
            font_size: 24
            on_release: root.accept()
            center_x: root.center_x
            center_y: 100
            size: 500, 75
