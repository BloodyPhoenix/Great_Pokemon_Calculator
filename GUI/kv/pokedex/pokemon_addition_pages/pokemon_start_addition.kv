<SecondTypeSelector>:
    text: "Выберите тип"
    values: root.values


<ImageSelector>:
    size_hint: 0.8, 0.8
    title: "Выбор изображения"
    pictures_dir: '/'
    Widget:
        size_hint_y: None
        BoxLayout:
            center_x: root.center_x
            orientation: 'vertical'
            size_hint_y: None
            size_hint_x: None
            width: root.width
            padding: [0, 0, 0, 100]
            Image:
                size_hint_y: None
                height: root.height * 0.2
                width: 350
                id: selected_image
                source: ''
            FileChooserIconView:
                height: root.height * 0.4
                width: root.width
                size_hint_y: None
                id: image_chooser
                rootpath: root.pictures_dir
                filters: ['*.png']
                on_selection: root.image_selected(image_chooser.selection)
        Button:
            text: "Принять"
            font_size: 24
            on_release: root.accept()
            center_x: root.center_x
            center_y: 100
            size: 500, 75


<PokemonRarity>:
    size_hint_y: None
    cols: 4
    rows: 2



<PokemonStartAddition>:
    main_properties_grid: main_properties_grid
    pokemon_rarity: pokemon_rarity
    mega: mega
    Widget:
        GridLayout:
            id: main_properties_grid
            top: root.height * 0.95
            cols: 2
            rows: 6
            col_default_width: 300
            row_default_height: 50
            Label:
                text: "Изображение"
                font_size: 24
            Button:
                id: image_button
                text: "Выбрать изображение"
                on_release: root.image_selector.open(self)
            Label:
                text: "Номер"
                font_size: 24
            TextInput:
                id: number
                font_size: 24
            Label:
                text: "Название вида"
                font_size: 24
            TextInput:
                id: species_name
                font_size: 24
            Label:
                text: "Название формы"
                font_size: 24
            TextInput:
                id: form_name
                font_size: 24
        GridLayout:
            rows: 1
            cols: 2
            size_hint_y: None
            height: self.minimum_height
            width: root.width
            center_x: root.width * 0.55
            center_y: root.height * 0.35
            GridLayout:
                cols: 2
                rows: 1
                Label:
                    text: "Мега-эволюция"
                    font_size: 20
                    width: 250
                CheckBox:
                    id: mega
                    width: 50
            PokemonRarity:
                id: pokemon_rarity
                size_hint_y: None
        Button:
            center_y: 150
            center_x: root.center_x
            font_size: 24
            size: 300, 70
            text: "Продолжить"
            on_release: root.proceed()
        Button:
            id: pokedex
            center_y: 75
            center_x: root.width / 4
            font_size: 24
            size: 200, 75
            text: "Покедекс"
            on_release: root.pokedex()
        Button:
            id: to_main
            center_y: 75
            center_x: root.width / 2
            font_size: 24
            size: 200, 75
            text: "Главное меню"
            on_release: root.to_main()
        Button:
            id: game_selection
            center_y: 75
            center_x: root.width * 0.75
            font_size: 24
            size: 200, 75
            text: "Выбор игры"
            on_release: root.game_selection()


<FirstStepGrid>:
    rows: 1
    cols: 2
    image_pass: ''
    number: ''
    species_name: ''
    form_name: ''
    rarity: ''
    type_1: ''
    type_2: ''
    size_hint_y: None
    width: root.width
    center_x: root.center_x
    Image:
        source: root.image_pass
    GridLayout:
        cols: 1
        rows: 6
        Label:
            size: self.texture_size
            text: root.number
            halign: 'left'
        Label:
            size: self.texture_size
            text: root.species_name
            halign: 'left'
        Label:
            size: self.texture_size
            text: root.form_name
            halign: 'left'
        Label:
            size: self.texture_size
            text: root.type_1
            halign: 'left'
        Label:
            size: self.texture_size
            text: root.type_2
            halign: 'left'
        Label:
            size: self.texture_size
            text: root.rarity
            halign: 'left'



