<StatisticsType>:
    text: "Выберите тип графика"


<ChooseFirstType>:
    text: "Выберите первый тип"


<ChooseSecondType>:
    text: "Выберите второй тип"


<StatisticsLayout>:
    orientation: 'vertical'


<StatisticsScreen>:
    statistics_type: statistics_type
    first_type: first_type
    second_type: second_type
    statistics_layout: statistics_layout
    ignore_type_order: ignore_type_order
    Widget:
        StatisticsType:
            id: statistics_type
            center_x: root.width * 0.5
            center_y: root.height - root.height * 0.05
            size: 750, 50
        ChooseFirstType:
            id: first_type
            center_x: root.width * 0.3
            center_y: root.height - root.height * 0.15
            size: 320, 50
        ChooseSecondType:
            id: second_type
            center_x: root.width * 0.7
            center_y: root.height - root.height * 0.15
            size: 320, 50
        Label:
            text: "Игнорировать порядок типов"
            center_x: root.width * 0.25
            center_y: root.height - root.height * 0.25
        CheckBox:
            id: ignore_type_order
            center_x: root.width * 0.4
            center_y: root.height - root.height * 0.25
        Button:
            center_x: root.width * 0.70
            center_y: root.height - root.height * 0.25
            size: 300, 50
            text: "Показать"
            on_release: root.show()
        StatisticsLayout:
            id: statistics_layout
            size: root.width - root.width * 0.2, root.height - root.height * 0.4
            center_y: root.height * 0.4
            center_x: root.center_x
        Button:
            center_y: 50
            center_x: root.width / 4
            font_size: 24
            size: 200, 50
            text: "Главное меню"
            on_release: root.to_main()
        Button:
            center_y: 50
            center_x: root.width / 2
            font_size: 24
            size: 200, 50
            text: "Выбор игры"
            on_release: root.game_selection()
        Button:
            center_y: 50
            center_x: root.width * 0.75
            font_size: 24
            size: 200, 50
            text: "Покедекс"
            on_release: root.pokedex()