<GoDataGrid>:
    rows: 1
    cols: 1
    scroll_box: scroll_box
    padding: 0, root.height * 0.1, 0, root.height * 0.2
    ScrollView:
        top: root.height/11*10
        center_x: root.width/2
        center_y: root.height/2
        do_scroll_y: True
        BoxLayout:
            orientation: 'vertical'
            id: scroll_box
            size_hint_y: None
            height: self.minimum_height




