<FastMoveGrid>:
    name: ''
    move_type: ''
    power_pve: ''
    speed_pve: ''
    energy_pve: ''
    power_pvp: ''
    speed_pvp: ''
    energy_pvp: ''
    orientation: 'vertical'
    height: sum([c.height for c in self.children])
    GridLayout:
        rows: 1
        cols: 4
        size_hint_y: None
        Label:
            text: "Название:"
        Label:
            text: root.name
        Label:
            text: "Тип:"
        Label:
            text: root.move_type
    GridLayout:
        cols: 2
        rows: 1
        size_hint_y: None
        height: sum([c.height for c in self.children])
        BoxLayout:
            size_hint_y: None
            orientation: 'vertical'
            Label:
                text: "Данные в PvE"
            GridLayout:
                rows: 3
                cols: 2
                Label:
                    text: "Сила"
                Label:
                    text: root.power_pve
                Label:
                    text: "Скорость"
                Label:
                    text: root.speed_pve
                Label:
                    text: "Энергия"
                Label:
                    text: root.energy_pve
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            Label:
                text: "Данные в PvP"
            GridLayout:
                rows: 3
                cols: 2
                Label:
                    text: "Сила"
                Label:
                    text: root.power_pvp
                Label:
                    text: "Скорость"
                Label:
                    text: root.speed_pvp
                Label:
                    text: "Энергия"
                Label:
                    text: root.energy_pvp

<MovesSection>:
    fast_moves_amount: 1
    charge_moves_amount: 1
    fast_moves_section: fast_moves_section
    charge_moves_section: charge_moves_section
    rows: 1
    cols: 2
    size_hint_y: None
    height: sum([c.height for c in self.children])
    GridLayout:
        id: fast_moves_section
        cols: 1
        rows: root.fast_moves_amount
        size_hint_y: None
        height: sum([c.height for c in self.children])
    GridLayout:
        id: charge_moves_section
        cols: 1
        rows: root.charge_moves_amount


<BaseData>:
    pokemon_image: ''
    pokemon_number: ''
    pokemon_species: ''
    pokemon_form: ''
    pokemon_type_1: ''
    pokemon_type_2: ''
    rows: 1
    cols: 2
    size_hint_y: None
    Image:
        source: root.pokemon_image
    GridLayout:
        cols: 1
        rows: 5
        Label:
            size: self.texture_size
            text: root.pokemon_number
            halign: 'left'
        Label:
            size: self.texture_size
            text: root.pokemon_species
            halign: 'left'
        Label:
            size: self.texture_size
            text: root.pokemon_form
            halign: 'left'
        Label:
            size: self.texture_size
            text: root.pokemon_type_1
            halign: 'left'
        Label:
            size: self.texture_size
            text: root.pokemon_type_2
            halign: 'left'


<StatsGrid>:
    rows: 2
    cols: 3
    size_hint_y: None
    height: sum([c.height for c in self.children])
