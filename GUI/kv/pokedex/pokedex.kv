#:kivy 2.1.0

<Pokedex>:
    pokemon_name: pokemon_name
    Widget:
        TextInput:
            id: pokemon_name
            multiline: False
            center_y: root.height - root.height * 0.05
            center_x: root.width * 0.3
            font_size: 24
            size: 350, 50
            on_text_validate: root.filter_by_name()
        Button:
            center_y: root.height - root.height * 0.05
            center_x: root.width * 0.85
            font_size: 24
            size: 500, 50
            text: "Фильтры"
            on_release: root.filters.open(self)
        Button:
            id: to_main
            center_y: 75
            center_x: root.width / 4
            font_size: 24
            size: 200, 75
            text: "Главное меню"
            on_release: root.to_main()
        Button:
            id: game_selection
            center_y: 75
            center_x: root.width / 2
            font_size: 24
            size: 200, 75
            text: "Выбор игры"
            on_release: root.game_selection()
        Button:
            id: update
            center_y: 75
            center_x: root.width * 0.75
            font_size: 24
            size: 200, 75
            text: "Обновить"
            on_release: root.update()


<RowLayout>:
    form: form_id
    image: ''
    pokedex_number: ''
    form_name: ''
    type_1: ''
    type_2: ''
    cp_40: ''
    cp_50: ''
    orientation: 'horizontal'
    Image:
        source: root.image
    Label:
        text: root.pokedex_number
    Label:
        id: form_id
        text: root.form_name
    Label:
        text: root.type_1
    Label:
        text: root.type_2
    Label:
        text: root.cp_40
    Label:
        text: root.cp_50



<PokedexGrid>:
    rv: rv_id
    cols:  1
    rows: 2
    padding: 0, root.height * 0.1, 0, root.height * 0.2
    GridLayout:
        cols: 7
        rows: 1
        size_hint_y: 0.1
        Label:
            text: 'Image'
        Label:
            text: 'Number'
        Label:
            text: 'Form name'
        Label
            text: 'Type 1'
        Label
            text: 'Type 2'
        Label:
            text: 'Max CP lvl 40'
        Label:
            text: 'Max CP lvl 50'
    GridLayout: # data
        cols: 1
        rows: 1
        RecycleView:
            bar_width: self.width / 20
            bar_height: self.height / 15
            id: rv_id
            viewclass: 'RowLayout'
            size_hint: 1, 0.7
            SelectableRecycleBoxLayout:
                default_size: None, dp(75)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'


<PokemonPage>:
    Widget:
        Button:
            id: pokedex
            center_y: 75
            center_x: root.width / 4
            font_size: 24
            size: 200, 75
            text: "Покедекс"
            on_release: root.pokedex()
        Button:
            id: to_main
            center_y: 75
            center_x: root.width / 2
            font_size: 24
            size: 200, 75
            text: "Главное меню"
            on_release: root.to_main()
        Button:
            id: game_selection
            center_y: 75
            center_x: root.width * 0.75
            font_size: 24
            size: 200, 75
            text: "Выбор игры"
            on_release: root.game_selection()


